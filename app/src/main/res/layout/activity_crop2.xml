<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".crop2">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/riceimg" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="30dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="name : "
                android:textColor="#000000"


                android:textSize="25dp" />

            <TextView
                android:id="@+id/crop_season1"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_below="@id/name1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="crop season : "
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/time_period1"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_below="@id/crop_season1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="time period  "
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/harwested1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/time_period1"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="harwested :"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/soil_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/sown_1"
                android:layout_marginHorizontal="100dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="loam soil"
                android:background="#6AAF6969"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/harwested_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_period1"
                android:layout_marginHorizontal="206dp"
                android:layout_marginVertical="10dp"
                android:background="#6AAF6969"
                android:layout_weight="1"
                android:text="october - november, end of mansoon"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sown1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/harwested1"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="10dp"
                android:background="#6AAF6969"
                android:layout_weight="1"
                android:text="         sown : "
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/sown_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/harwested_1"
                android:layout_marginHorizontal="206dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="start in june ,after first mansoon rain"
                android:background="#6AAF6969"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/crop_season_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name1"
                android:layout_marginHorizontal="206dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="kharif"
                android:textColor="#000000"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/name_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="30dp"

                android:layout_weight="1"
                android:background="#6AAF6969"
                android:hapticFeedbackEnabled="false"
                android:text="Jowar"
                android:textColor="#000000"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/soil1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/sown1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:background="#6AAF6969"
                android:text="soil : "
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/climate1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/soil1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="climate : "
                android:textColor="#000000"
                android:background="#6AAF6969"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/climate_1"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/soil_1"
                android:layout_marginHorizontal="140dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="hot and humid climate"
                android:background="#6AAF6969"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/state_regions1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/climate1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="state and regions  "
                android:background="#6AAF6969"
                android:textColor="#000000"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/central_zone1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/state_regions1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="29dp"
                android:background="#6AAF6969"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="central zone:"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/central_zone_1"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/central_zone1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="206dp"
                android:layout_marginVertical="10dp"
                android:background="#6AAF6969"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:text="MP and gujarat"
                android:textColor="#000000"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/central_zone2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/central_zone_1"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="#6AAF6969"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="29dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="peninsular zone :"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/central_zone_2"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/central_zone2"
                android:layout_alignParentEnd="true"
                android:background="#6AAF6969"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="206dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:text="region comprises of Gujarat, Maharashtra and Rajasthan"
                android:textColor="#000000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/diseases1"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_below="@id/central_zone_2"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                android:layout_weight="1"
                android:text="Diseases  "
                android:textColor="#000000"
                android:background="#6AAF6969"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/diseasesname1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/diseases1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="name : "
                android:textColor="#000000"
                android:background="#6AAF6969"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/diseasesname_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/diseases1"
                android:layout_marginHorizontal="130dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="Sheath blight"
                android:background="#6AAF6969"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/symptom2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/diseasesname1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:text="symptom : "
                android:textColor="#000000"
                android:background="#6AAF6969"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/symptom_1"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/symptom2"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="31dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text=" Brown spots on rice, rice blast, ect."
                android:textColor="#000000"
                android:background="#6AAF6969"
                android:textSize="20sp" />


        </RelativeLayout>
    </ScrollView>






</RelativeLayout>

