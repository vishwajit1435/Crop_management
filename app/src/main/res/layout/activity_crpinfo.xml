<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".crpinfo">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/crop1"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="RICE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toTopOf="@+id/crop3"
        app:layout_constraintEnd_toStartOf="@+id/crop2"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

    <Button
        android:id="@+id/crop2"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="JOWAR"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.094" />

    <Button
        android:id="@+id/crop3"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="SOYBEAN"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <Button
        android:id="@+id/crop4"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="MAIZE"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crop2"
        app:layout_constraintVertical_bias="0.185" />

    <Button
        android:id="@+id/crop5"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="PEAS"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crop3"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/crop6"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="WHEAT"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crop4"
        app:layout_constraintVertical_bias="0.235" />

    <Button
        android:id="@+id/crop7"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="MUSTARD"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crop5"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/crop8"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="GROWNDNUT"
        android:textSize="18sp"
        app:backgroundTint="#DD28589E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/crop7"
        app:layout_constraintTop_toBottomOf="@+id/crop6"
        app:layout_constraintVertical_bias="0.466" />

</androidx.constraintlayout.widget.ConstraintLayout>